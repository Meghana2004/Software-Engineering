def temperature_modeling(a, b, c, time): 
    temperature = a * time**2 + b * time + c 
    return temperature 

with open("weather.txt", 'r') as file: 
    lines = file.readlines() 
    a_file, b_file, c_file, time_file = map(float, lines[0].split()) 

print("Step 3: Read from a File for Weather Modeling") 
temperature = temperature_modeling(a_file, b_file, c_file, time_file)
print("Temperature for file input coefficients at time", time_file, "hours:", temperature)
